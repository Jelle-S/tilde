# vim: ft=gitconfig:

[include]
    path = .gitconfig-user

[pretty]
    shortnsweet = %C(green)%h%C(blue)%d%C(white) %s  %C(yellow)%an%C(reset), %cr

[alias]
    s = status --short --branch
    aa = add --all
    au = add --update
    amend = commit --amend
    ci = commit
    co = checkout
    d = diff
    dc = diff --cached
    l = "!echo && (git --no-pager log -15 --pretty=shortnsweet) && echo"
    ll = log --pretty=shortnsweet --graph
    pom = push origin master
    pum = pull origin master
    info = "!git remote -v && git branch -a"

[color]
    ui = auto

[github]
    user = dubgeiser

[push]
    default = simple
